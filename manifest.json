{
    "manifest_version": 2,

    "name": "imgur Archiver",
    "description": "Enables creating a clean version of an imgur album without comments for archival purposes",
    "version": "2.1.0",

    "browser_action": {
        "default_icon": "icon_19.png",
        "default_title": "Archive album",
        "default_popup": "archiver.html"
    },

    "icons": {
        "48": "icon_48.png",
        "128": "icon_128.png"
    },

    "author": "Tsuri Kamppuri",

    "permissions": [
        "activeTab"
    ],

    "content_security_policy": "script-src 'self' 'sha256-Z+mTxExlknLNac95cD55v7n2poj0TzvakLJfJTenWNg='; object-src 'self'",

    "short_name": "imgurAr"
}