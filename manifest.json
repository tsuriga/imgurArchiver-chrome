{
    "manifest_version": 2,

    "name": "imgur Archiver",
    "description": "This extension enables creating a clean version of an imgur album without comments for saving",
    "version": "1.1.2",

    "browser_action": {
        "default_icon": "archiver.png",
        "default_title": "Archive album",
        "default_popup": "archiver.html"
    },

    "author": "Tsuri Kamppuri",

    "permissions": [
        "tabs",
        "http://imgur.com/gallery"
    ],

    "short_name": "imgurAr"
}